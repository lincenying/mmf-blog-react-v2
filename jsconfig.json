{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "~/*": ["src/*"]
        },
        "jsx": "react",
        "target": "ES6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "files": ["main.ts"]
}
